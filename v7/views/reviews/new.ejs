<%- include("../partials/header") %>
<div class="container">
<div class="row " >
	<div class="container mt-5" style="color:white">
		<h1 style="text-align: center" >
		Add your Review to - <%= food.name %>
	</h1>
	</div>
	
	<div style="width:30%; margin:25px auto">
<form method="POST" action="/food/<%= food._id %>/reviews">
	<div class="form-group">
	<input class="form-control" type="text" name="review[author]" placeholder="author">
	</div>
	<div class="form-group">
	<input class="form-control" type="text" name="review[review]" placeholder="review">
	</div>
	
	<div class="form-group">
		<button class="btn btn-lg btn-primary btn-block">
			Submit!
		</button>
	</div>
</form>
		<a href="/food">Go Back!</a>
	</div>
	</div>
</div>
<%- include("../partials/footer") %>